<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

<!-- 要调用的工作类 -->
	<bean id="deleteTempDoc" class="com.yihuacomputer.common.file.DeleteFileDirectory"/>
	
	<bean id="clearFileService" class="com.yihuacomputer.fish.web.util.ClearFileService"/>
	
	<bean id="FishServletContext" class="com.yihuacomputer.fish.web.util.FishServletContext"/>
	
	<bean id="updateDeviceInfoJob" class="com.yihuacomputer.fish.monitor.service.DeviceInfoUpdateTask"/>
	
	<bean id="updateQuittingDevInfoJob" class="com.yihuacomputer.fish.monitor.service.QuittingDevInfoUpdateTask"/>
	
    <!-- 定义调用对象和调用对象的方法 -->
    <bean id="deletetask"
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 调用的类 -->
        <property name="targetObject">
            <ref bean="clearFileService" />
        </property>
        <!-- 调用类中的方法 -->
        <property name="targetMethod">
            <value>clearFile</value>
        </property>
    </bean>    
    
    <!-- 定义触发时间 -->
    <bean id="deleteTime"
        class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="deletetask" />
        </property>
        <!-- cron表达式 -->
        <property name="cronExpression">
            <!--每日11点加载删除临时目录文件-->
             <value>${deleteTime}</value>
        </property>
    </bean>

<!--每天0点将当天未生效的设备信息更新到信息表中-->
        <bean id="updateDeviceInfoTask"
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 调用的类 -->
        <property name="targetObject">
            <ref bean="updateDeviceInfoJob" />
        </property>
        <!-- 调用类中的方法 -->
        <property name="targetMethod">
            <value>deviceInfoUpdate</value>
        </property>
    </bean>
    <!-- 定义触发时间 -->
    <bean id="updateDeviceInfoTaskTime"
        class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="updateDeviceInfoTask" />
        </property>
        <property name="cronExpression">
             <value>${updateDeviceInfoTime}</value>
        </property>
    </bean>
    
    <!--每天0点将当天未生效的设备信息更新到信息表中-->
     <bean id="updateQuittingDevInfoTaskTime"
        class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail">
            <ref bean="updateQuittingDevInfoTask" />
        </property>
        <property name="cronExpression">
             <value>${updateQuittingDeviceInfoTime}</value>
        </property>
    </bean>
     <bean id="updateQuittingDevInfoTask"
        class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 调用的类 -->
        <property name="targetObject">
            <ref bean="updateQuittingDevInfoJob" />
        </property>
        <!-- 调用类中的方法 -->
        <property name="targetMethod">
            <value>quittingDevInfoUpdate</value>
        </property>
    </bean>
</beans>